<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Calculadora_Kotlin" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <!-- Estilo Base para TODOS los botones de la calculadora -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- 1. Estilo para Números y Constantes (Hereda de CalculatorButton) -->
    <style name="CalculatorButton.Numeric" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/orange_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 2. Estilo para Operadores (Hereda de CalculatorButton) -->
    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 3. Estilo para Funciones Científicas (Hereda de CalculatorButton) -->
    <style name="CalculatorButton.Scientific" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/orange_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 4. Estilo especial para 'C' (Hereda de CalculatorButton) -->
    <style name="CalculatorButton.Clear" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/tomato_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 5. Estilo especial para '√' (Hereda de CalculatorButton) -->
    <style name="CalculatorButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


</resources>
